dep="" && which npm || dep="npm $dep" && which firejail || dep="firejail $dep" && which route || dep="net-tools $dep" && which xhost || dep="xorg-xhost $dep" && sudo pacman -S $dep || true && OLDERPWD=$PWD && while [ ! -d "$CATBOT_HOME" ]; do read -p "Choose a path to \"catbot\" folder (e.g: /usr/lib/ or ~/Desktop):  " "CATBOT_HOME"; done && CATBOT_HOME_STR="CATBOT_HOME=\"${CATBOT_HOME}\"" && grep -q "CATBOT_HOME" /etc/profile && sudo sed -i "/CATBOT_HOME/c $CATBOT_HOME_STR" /etc/profile || sudo sed -i '$a\'"$CATBOT_HOME_STR" /etc/profile && cd $CATBOT_HOME && sudo git clone --depth 1 https://github.com/nullworks/catbot-setup catbot && cd catbot && sudo chown $USER -R . && chgrp $(id -gn) -R . && git clone --depth 1 https://github.com/nullworks/catbot-database && chmod 755 -R . && ./install-catbots && sed -i '16i ./convert.js' start && echo "sudo rm /usr/bin/catbot; sudo rm -rf ../catbot" >> uninstall && cd catbot-database && mv nav\ meshes/* ~/.steam/steam/steamapps/common/Team\ Fortress\ 2/tf/maps/ && mkdir /opt/cathook/data/configs || true && mv configs/* /opt/cathook/data/configs/ && cd .. && rm -rf catbot-database && rm convert.js && wget -q https://raw.githubusercontent.com/TrulyFalseHonesty/cats-misc/master/convert.js && chmod 755 convert.js && cd /usr/bin && sudo wget -q https://raw.githubusercontent.com/TrulyFalseHonesty/cats-misc/master/catbot && sudo chmod 755 catbot && cd $OLDERPWD && clear && echo Installation successfull!
