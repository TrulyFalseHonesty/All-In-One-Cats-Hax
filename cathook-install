OLDERPWD=$PWD && while [ ! -d "$CATHOOK_HOME" ]; do read -p "Choose a path to \"cathook\" folder (e.g: /usr/lib/ or ~/Desktop):  " "CATHOOK_HOME"; done && CATHOOK_HOME_STR="CATHOOK_HOME=\"${CATHOOK_HOME}\"" && grep -q "CATHOOK_HOME" /etc/profile && sudo sed -i "/CATHOOK_HOME/c $CATHOOK_HOME_STR" /etc/profile || sudo sed -i '$a\'"$CATHOOK_HOME_STR" /etc/profile && cd $CATHOOK_HOME && sudo git clone --depth 1 https://github.com/nullworks/cathook && cd cathook && sudo chown $USER -R . && chgrp $(id -gn) -R . && chmod 755 -R . && ./install-all && ./install-data && cd /usr/bin && sudo wget -q https://raw.githubusercontent.com/TrulyFalseHonesty/cats-misc/master/cathook && cd $OLDERPWD && clear && echo && echo Installation successfull!
